<?xml version="1.0"?>
<layout>
	<page name="Main" id="page_0" background="images/wht_page_0_background.png" buttons="images/wht_page_0_buttons.png" font="resources/fonts/Segment14.otf" fg_colour="000000" >
		<field function="speed">
			<button x0="0" y0="0" w="240" h="150"></button>
			<text_center x="95" y="75" size="1"/>
		</field>
		<field function="speed_tenths">
			<text_center x="210" y="115" size="5"/>
		</field>
		<field function="speed_units">
			<text_center x="205" y="75" size="2"/>
		</field>
		<field function="heart_rate">
			<button x0="0" y0="80" w="239" h="89"></button>
			<text_center x="100" y="195" size="8"/>
		</field>
		<field function="heart_rate_units">
			<text_center x="210" y="195" size="2"/>
		</field>
		<field function="gradient">
			<text_center x="50" y="280" size="5"/>
		</field>
		<field function="gradient_units">
			<text_center x="100" y="280" size="2"/>
		</field>
		<field function="cadence">
			<text_center x="180" y="280" size="5"/>
		</field>
	</page>
	<page name="Page1" id="page_1" background="images/wht_page_1_background.png" buttons="images/wht_page_1_buttons.png" font="resources/fonts/Segment14.otf" fg_colour="000000" >
		<field function="speed">
			<button x0="0" y0="0" w="240" h="79"></button>
			<text_center x="95" y="75" size="1"/>
		</field>
		<field function="speed_tenths">
			<text_center x="210" y="115" size="5"/>
		</field>
		<field function="speed_units">
			<text_center x="205" y="75" size="2"/>
		</field>
	</page>
	<page name="Settings" id="settings_0" background="images/wht_settings_0_background.png" buttons="images/wht_settings_0_buttons.png" font="resources/fonts/Segment14.otf" fg_colour="000000" >
		<field function="load_default_layout">
			<button x0="0" y0="0" w="240" h="80"></button>
			<text_center x="120" y="40" size="2">Default</text_center>
		</field>
		<field function="load_white_lcd_layout">
			<button x0="0" y0="79" w="240" h="80"></button>
			<text_center x="120" y="200" size="2">White LCD</text_center>
		</field>
		<field function="quit">
			<button x0="0" y0="239" w="240" h="80"></button>
			<text_center x="120" y="280" size="2">Quit</text_center>
		</field>
	</page>
	<page name="Editor" id="editor" background="images/wht_editor_background.png" buttons="images/wht_editor_buttons.png" font="" fg_colour="FFFFFF">
		<field function="ed_cancel">
			<button x0="0" y0="0" w="120" h="60"/>
			<text_center x="60" y="30" size="4">Cancel</text_center>
		</field>
		<field function="ed_accept">
			<button x0="121" y0="0" w="120" h="60"/>
			<text_center x="180" y="30" size="4">Accept</text_center>
		</field>
		<field function="variable_description">
			<text_center x="120" y="70" size="2"/>
		</field>
		<field function="value">
			<text_center x="120" y="130" size="6"/>
		</field>
		<field function="ed_decrease">
			<button x0="0" y0="200" w="120" h="60"/>
			<text_center x="60" y="230" size="5">-</text_center>
		</field>
		<field function="ed_increase">
			<button x0="120" y0="200" w="120" h="60"/>
			<text_center x="180" y="230" size="5">+</text_center>
		</field>
		<field function="ed_prev">
			<button x0="0" y0="260" w="120" h="60"/>
			<text_center x="60" y="290" size="5">&lt;</text_center>
		</field>
		<field function="ed_next">
			<button x0="120" y0="260" w="120" h="60"/>
			<text_center x="180" y="290" size="5">&gt;</text_center>
		</field>
	</page>
</layout>
